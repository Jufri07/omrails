<div class="container">
  <p>
    <strong>User:</strong>
    <%= @tweet.user %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @tweet.content %>
  </p>

  <div class="container">
    <% if @tweet.user == current_user %>
      <%= link_to "Edit this tweet", edit_tweet_path(@tweet) %>
    <% end %>
      <%= link_to "Back to tweets", tweets_path %>
      <%= button_to "Destroy this tweet", @tweet, method: :delete, class: "button-destroy" %>
  </div>
</div>
